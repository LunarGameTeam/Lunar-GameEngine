////////////////////////////////////////////////////////////////////////////////
// Vertex Shader
////////////////////////////////////////////////////////////////////////////////
BaseFragment VSMain(BaseVertex input) 
{
    BaseFragment output;     
    output.position = float4(input.position, 1);
    output.normal = float4(input.normal, 0);
    output.uv = input.uv;
    output.color = input.color;
	return output;
}

float4 PSMain(BaseFragment input) : SV_TARGET
{
    return float4(1,1,1,1);
}
