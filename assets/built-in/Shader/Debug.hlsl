////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 PSMain(BaseFragment input) : SV_TARGET
{
    float f = saturate(dot(input.normal, cLightDirection));
	return input.color * f;
}
